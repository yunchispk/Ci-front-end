
.article {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.all {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
}

.title {
  font-size: 50rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.content {
  font-size: 50rpx;
  font-family: "楷体";
}

.page-section {
  margin-bottom: 20rpx;
}

.flex-wrp {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  opacity: 0.7;
}

.bc_green {
  width: 60rpx;
  height: 60rpx;
  font-size: x-large;
  font-family: "FangSong";
}

.back2 {
  border-bottom: 2px solid black;
}

.back1 {
  background-color: wheat;
}

.pzback0 {
  color: red;
}

.pzback1 {
  color: green;
}

.pzback {
  color: blue;
}

.inputView {
  margin-top: 25px;
  border: 1px solid green;
  /*边界角的弧度*/
  border-radius: 30px;
  padding-left: 20px;
  height: 44px;
}

.textareaView {
  margin-top: 15px;
  border: 1px solid green;
  /*边界角的弧度*/
  border-radius: 30px;
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 10px;
  height: 200px;
}

.button {
  margin-top: 15px;
  opacity: 0.7;
}

.green_button {
  opacity: 0.7;
  background-color: green;
}
