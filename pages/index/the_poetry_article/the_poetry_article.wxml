<!--pages/index/poetry_article/poetry_article.wxml-->
<view class="all" style="background-image: url('{{imageData}}');">
  <view class="title">
    <text>{{rhythmic}}</text>
  </view>
  <view class="poet">
    <text>{{author}}</text>
  </view>
  <view class="content" wx:for="{{paragraphs}}" wx:for-item="i">
    <text>{{i}}</text>
  </view>
  <!--
  <view class="note">
    <text>注释：{{poetry_article.note}}</text>
  </view>
  -->
</view>